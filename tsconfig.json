
{
  "extends": "expo/tsconfig.base",
  "typeRoots": [
    "node_modules/@types",
    "path/to/local/types"
  ],
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "@firebase/auth": [
        "./node_modules/@firebase/auth/dist/index.rn.d.ts"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "node_modules/firebase",
    "expo-env.d.ts",
    "metro.config.js"
  ]
}